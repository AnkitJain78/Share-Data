<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Firebase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DarkPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="cardBackground">@color/cardBackground</item>
        <item name="textColor">@color/white</item>
        <item name="appWindowBackground">@color/windowBackground</item>
        <item name="buttonTint">@color/cardBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/cardBackground</item>
    </style>
</resources>